cbuffer MatBuffer : register(b0)
{
	matrix matWorld;
	matrix matView;
	matrix matProj;
	//matrix matViewProj;
};

cbuffer LightBuffer : register(b1)
{
	float4		lightDiffColor;
	float3		eyePos;
	float3		lightVec;	
};

cbuffer MaterialBuffer : register(b2)
{
	float4		materialDiffColor;	
};

struct Output
{
	float4 position : SV_POSITION;	
	float3 normal	: NORMAL0;
};


float4 main(Output o) : SV_TARGET0
{
	float cos = max(0, dot(o.normal, lightVec));

	return materialDiffColor * lightDiffColor * cos;
}