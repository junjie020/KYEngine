#include "Common.inc"
#include "Lighting.inc"
#include "ShadeInput.inc"

float4 main(PSInput psIN) : SV_TARGET0
{
	LightResult lightRes = DoLighting(psIN.positionInVS, psIN.normalInVS);

	float4 diffuse = float4(lightRes.diffuse.rgb, 1.0f) * materialDiffColor;

	float4 specular = float4(lightRes.specular.rgb, 1.0f) * materialSpecularColor;

	return diffuse + specular + materialEmissiveColor + materialAmbientColor;
}